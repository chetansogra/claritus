sudo apt-get update
sudo apt-get install python3
python3 -V
sudo apt-get install -y python3-pip
pip3 -V
pip3 install virtualenv
virtualenv --version
mkdir [project name] (django-apps)
cd django-apps
virtualenv env (setup virtual envirenment create env folder)
. env/bin/activate
pip install django
django-admin startproject testsite (create demo project)
cd testsite
python manage.py migrate
django-admin --version
sudo ufw allow 8000 (allow port 8000)
python manage.py createsuperuser (create new username with password)
python manage.py runserver
